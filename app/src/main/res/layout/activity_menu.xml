<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sevon.max.androidspaceship.MenuActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/startGameButton"
        android:layout_marginBottom="144dp"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:backgroundTint="#2637fb"
        android:onClick="startGameButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score"
        android:id="@+id/highScoreButton"
        android:layout_marginTop="61dp"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignTop="@+id/startGameButton"
        android:layout_alignLeft="@+id/startGameButton"
        android:layout_alignStart="@+id/startGameButton"
        android:textColor="#ffffff"
        android:backgroundTint="#2434ee"
        android:nestedScrollingEnabled="false"
        android:onClick="highScoreButtonClick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SpaceDroid"
        android:id="@+id/textView"
        android:layout_marginTop="88dp"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="#2638ff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
